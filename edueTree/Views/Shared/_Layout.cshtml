<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.MetaDescription" />
    <meta name="keywords" content="@ViewBag.MetaKeywords" />

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="shortcut icon" type="image/ico" href="~/FirmLogo/favicon.ico">
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    @Styles.Render("~/Content/datatablecss")
    <link href="~/Content/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/_all-skins.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.2.4/css/buttons.dataTables.min.css" />
    <script src="~/js/jquery-1.12.4.js"></script>
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="loader"></div>

    <div class="wrapper">
        <header class="main-header">
            <a href="" class="logo">
                <span class="logo-mini"><b>@*Innovative Fusion*@</b></span>
                <span class="logo-lg"><b>Innovative Fusion</b></span>
            </a>

            <nav class="navbar" role="navigation">
                @if (Request.IsAuthenticated)
                {
                    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                        <span class="sr-only">Toggle navigation</span>
                    </a>
                }
                @Html.Partial("_LoginPartial")
            </nav>
        </header>


        <aside class="main-sidebar">
            <section class="sidebar">
                @Html.Partial("_VerticalMenu")
            </section>
        </aside>

        <div class="content-wrapper">
            @RenderBody()
        </div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; 2017-2018 <a href="http://innovative-fusion.com">Innovative-Fusion</a>.</strong> All rights
            reserved.
        </footer>
        <div class="control-sidebar-bg"></div>
        <script src="~/plugins/jQuery/jQuery-2.1.4.min.js"></script>

        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/datatablejs")

        @*<script src="~/js/jquery.dataTables.min.js"></script>*@
        <script src="~/js/dataTables.buttons.min.js"></script>
        <script src="~/plugins/fastclick/fastclick.js"></script>
        @RenderSection("scripts", required: false)
        <script type="text/javascript">
            $(".datepicker").datepicker({
                format: "MM-dd-yyyy",
                autoclose: true,
                orientation: 'bottom auto',
            }).on('changeDate', function (ev) {
                $(this).datepicker('hide');
            });;

        </script>
        <script src="https://cdn.datatables.net/buttons/1.2.4/js/buttons.flash.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
        <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
        <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
        <script src="https://cdn.datatables.net/buttons/1.2.4/js/buttons.html5.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/1.2.4/js/buttons.print.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
        <script src="~/js/notify.min.js"></script>
    </div>
</body>
</html>
