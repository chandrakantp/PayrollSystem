@using edueTree.Models
@{
    List<MenuAggregate> menuList = ViewBag.Menu;
}
<style>
    .treeview-fnt {
        font-size: 16px !important;
    }

    @@media (max-width: 321px) {
        .fnt {
            font-size: 14px !important;
        }
    }

    .side-trigger {
        right: 0;
        top: 130px;
        text-align: right;
        position: fixed;
        z-index: 3;
    }

        .side-trigger ul {
            margin: 0;
            padding: 0;
        }

            .side-trigger ul li {
                margin: 10px 0;
                display: block;
                background: #367fa9;
                box-shadow: 0px 0px 5px #494949;
            }

                .side-trigger ul li a {
                    color: #fff;
                    display: block;
                    padding: 20px 10px;
                    width: 30px;
                }

                    .side-trigger ul li a i {
                        font-size: 25px;
                    }

    @@media (min-width:768px) and (max-width:1024px) {
        .side-trigger {
            top: 270px;
        }
    }
</style>

<ul class="sidebar-menu">
    @*<li class="header"></li>*@
    @if (Request.IsAuthenticated)
    {
        <li class="treeview">
            <a href='@Url.Action("StaffProfile", "Staffs")'><i class="fa fa-user"></i>My Profile</a>
            @*<a href='@Url.Action("StaffDashboard", "Staffs")'><i class="fa fa-user"></i>General Information</a>*@
        </li>


        foreach (var mainMenu in menuList.GroupBy(a => a.MainMenu))
        {
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-indent"></i> <span>@mainMenu.Key</span> <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    @foreach (var subMenu in mainMenu)
                    {
                        <li>
                            <a href='@Url.Action(@subMenu.Action, @subMenu.Control)'><i class="fa fa-circle-o"></i> @subMenu.Title</a>
                        </li>
                    }
                </ul>
            </li>
        }
        @*<li class="treeview">
