<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    @Styles.Render("~/Content/datatablecss")
    <link href="~/Content/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/_all-skins.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.2.4/css/buttons.dataTables.min.css" />
    <script src="~/js/jquery-1.12.4.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>



    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
        $(window).load(function () {
            $(".loader").fadeIn("slow");
            $(".loader").fadeOut();
        })
    </script>
    <style type="text/css">
        .dropdown-menu > li > a:hover {
            background-color: #3c8dbc;
        }
    </style>

    @*<style>
        .loader {
            position: fixed;
            left: 0px;
            top: 0px;
            width: 100%;
            height: 100%;
            z-index: 9999;
            background: url('../../Images/pageloader.gif') 50% 50% no-repeat rgb(0,0,0);
            opacity: .5;
        }
    </style>*@

</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="loader"></div>

    <div class="wrapper">
        <header class="main-header">
            <a href="" class="logo">
                <span class="logo-mini"><b>@*Innovative Fusion*@</b></span>
                <span class="logo-lg"><b>Innovative Fusion</b></span>
            </a>

            <nav class="navbar" role="navigation">
                @if (Request.IsAuthenticated)
                {
                    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                        <span class="sr-only">Toggle navigation</span>
                    </a>
                }
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm1", @class = "navbar-custom-menu" }))
                {
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown">
                                Super-admin
                            </a>
                            <ul class="dropdown-menu">
                                <li class="user-header">
                                    <p>Hello, Super-admin</p>
                                </li>
                                <!-- Menu Body -->
                                <li class="user-body">
                                    <div class="row">
                                        <div class="col-md-6 text-center">

                                        </div>
                                        <div class="col-md-6 text-center">
                                            <a href="#"></a>
                                        </div>
                                    </div>
                                </li>


                                <li class="user-footer">
                                    <div class="pull-left">
                                            <a href="@Url.Action("ChangePasswordForSuperadmin", "Account")" class="btn btn-default btn-flat">Change Password</a>
                                        </div>
                                    <div class="pull-right">
                                        <a href="javascript:document.getElementById('logoutForm1').submit()" class="btn btn-default btn-flat">Sign out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
            </nav>
        </header>


        <aside class="main-sidebar">
            <section class="sidebar">
                @*@Html.Partial("_VerticalMenu")*@
                <ul class="sidebar-menu">
                    <li class="treeview">
                        <a href=''>
                            <i class="fa fa-users"></i>Manage Firms<i class="fa fa-angle-left pull-right"></i>
                        </a>

                        <ul class="treeview-menu">
                            <li>
                                <a href='@Url.Action("FirmDashboard", "Firm")'><i class="fa fa-circle-o"></i> Dashboard</a>
                            </li>

                            <li>
                                <a href='@Url.Action("FirmsForSuperadmin", "Firm")'><i class="fa fa-circle-o"></i> Manage Firms</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </section>
        </aside>

        <div class="content-wrapper">
            @RenderBody()
        </div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; 2017-2018 <a href="http://innovative-fusion.com">Innovative-Fusion</a>.</strong> All rights
            reserved.
        </footer>
        <div class="control-sidebar-bg"></div>
        <script src="~/plugins/jQuery/jQuery-2.1.4.min.js"></script>

        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/datatablejs")
        @*<script src="~/js/jquery.dataTables.min.js"></script>*@
        <script src="~/js/dataTables.buttons.min.js"></script>
        <script src="~/plugins/fastclick/fastclick.js"></script>
        @RenderSection("scripts", required: false)
        <script type="text/javascript">
            $(".datepicker").datepicker({
                format: "MM-dd-yyyy",
                autoclose: true,
                orientation: 'bottom auto',
            }).on('changeDate', function (ev) {
                $(this).datepicker('hide');
            });;

        </script>
        <script src="https://cdn.datatables.net/buttons/1.2.4/js/buttons.flash.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
        <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
        <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
        <script src="https://cdn.datatables.net/buttons/1.2.4/js/buttons.html5.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/1.2.4/js/buttons.print.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
        <script src="~/js/notify.min.js"></script>
    </div>
</body>
</html>
