@model edueTree.Models.CompansationModel
@{
    ViewBag.Title = "CompansationRequest";
}


<section class="content-header">
    <h1>
        @*Employee Registration*@
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Compensation </a></li>
        <li class="active">Request</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <section class="col-md-12">
            @using (Html.BeginForm())
            {
            <div class="box box-success">
                <div class="box-header">
                    <i class="fa fa-user"></i>
                    <h3 class="box-title"> Add Compensation Request</h3>
                </div>
                <div class="box-body">
                    <div class="item">

                        @*@Html.AntiForgeryToken()*@

                        <div class="form-horizontal" id="defaultForm">
                            @Html.ValidationSummary(true)

                            <div class="form-group">

                                <div class="col-md-6">
                                    <label>Date</label>
                                    @Html.TextBoxFor(model => model.date, new { @id = "IncrementDate", @class = "form-control", placeholder = "--------- Select date ----------" })
                                    @Html.ValidationMessageFor(model => model.date, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="IncrementDatemessage" />
                                </div>
                                <div class="col-md-6">
                                    <label>Narration</label>
                                    @Html.TextAreaFor(a => a.Narration, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Narration, string.Empty, new { @class = "help-block" })
                                </div>
                            </div>


                        </div>


                    </div>
                </div>
                <div class="box-footer">
                    <input type="submit" value="Add" class="btn btn-default pull-right" />
                </div>
            </div>
            }
        </section>
    </div>
</section>

<script type="text/javascript">
    $(document).ready(function() {
        $('#IncrementDate').datepicker({
            dateFormat: "dd/mm/yy",
            autoclose: true,
        });
    });
</script>

<script type="text/javascript">
    $.noConflict();
    jQuery(document).ready(function () {
        if (true) {
            if ('@TempData["notice"]' === "success") {
                $.notify(" Record Inserted  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "update") {
                $.notify(" Record Updated  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "exist") {
                $.notify(" Record Already Exist ! ", "warn");
            }
            if ('@TempData["notice"]' === "delete") {
                $.notify(" Record Deleted Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "cantdelete") {
                $.notify(" Can't delete, because this used some where. ! ", "warn");
            }
            if ('@TempData["notice"]' === "wrong") {
                $.notify(" Something went wrong plz check ! ", "error");
            }
        }

    });
</script>

