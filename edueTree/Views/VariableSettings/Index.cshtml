@model IEnumerable<edueTree.Models.VariableSettingModel>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="">
                <a href='@Url.Action("Create")' class="btn btn-success pull-right">
                    <i class="fa fa-plus-square"></i> Add Pay Head
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content-header">
    <h1>
        @*Salary head settings*@
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Head</a></li>
        <li class="active">Settings</li>
    </ol>
</section>
<section class="content">

    <div class="row">

        <section class="col-lg-12 connectedSortable">
            <div class="box box-success">
                <div class="box-header">
                    <i class="fa fa-calendar"></i>
                    <h3 class="box-title"> Pay Head List</h3>
                </div>
                <div class="box-body chat" id="chat-box">
                    <div class="item">
                        <div class="table-responsive">
                            <table style="overflow-x: scroll; white-space: nowrap;" class="table table-striped ">
                                <thead>
                                    <tr>
                                        <th>
                                            Structure
                                        </th>
                                        <th>
                                            Variables
                                        </th>
                                        <th>
                                            Payslip Name
                                        </th>
                                        <th>
                                            Pay head Type
                                        </th>
                                        <th>
                                            Under
                                        </th>
                                        <th>
                                            Calculation Type
                                        </th>
                                        <th>
                                            Affect Net Sal
                                        </th>
                                        <th>
                                            period Type
                                        </th>
                                        <th>  EarnDeduction</th>
                                        <th>  percentage </th>
                                        <th>   value </th>

                                        <th>  status </th>
                                        <th> </th>                 
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var group in Model.GroupBy(x => x.Structname))
                                        {
                                            <tr class="group-header">
                                                <td> @group.Key </td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td>
                                                    <a href='@Url.Action("CopyPayheads", new { id = @group.FirstOrDefault().Structureid})' class="btn btn-success pull-right">
                                                        <i class="fa fa-copy"></i>&nbsp;Replicate
                                                    </a>

                                                    
                                                </td>
                                            </tr>


                                            foreach (var item in group)
                                            {
                                                <tr>
                                                    <td></td>
                                                    @*<td>
                                    @if (item.Structname != null)
                                    {
                                        @Html.DisplayFor(modelItem => item.Structname)
                                    }
                                    else
                                    {
                                        <label>N/A</label>
                                    }

                                </td>*@
                                                    <td>
                                                        @if (item.VariableName != null)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.VariableName)
                                                        }
                                                        else
                                                        {
                                                            <label>N/A</label>
                                                        }

                                                    </td>
                                                    <td>
                                                        @if (item.payslipname != null)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.payslipname)
                                                        }
                                                        else
                                                        {
                                                            <label>N/A</label>
                                                        }

                                                    </td>
                                                    <td>
                                                        @if (item.payheadtype != null)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.payheadtype)
                                                        }
                                                        else
                                                        {
                                                            <label>N/A</label>
                                                        }

                                                    </td>
                                                    <td>
                                                        @if (item.Under != null)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.Under)
                                                        }
                                                        else
                                                        {
                                                            <label>N/A</label>
                                                        }

                                                    </td>
                                                    <td>
                                                        @if (item.calculationtype != null)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.calculationtype)
                                                        }
                                                        else
                                                        {
                                                            <label>N/A</label>
                                                        }

                                                    </td>
                                                    <td>
                                                        @if (item.affnetsalary != null)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.affnetsalary)
                                                        }
                                                        else
                                                        {
                                                            <label>N/A</label>
                                                        }

                                                    </td>
                                                    <td>
                                                        @if (item.Calculationperiod != null)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.Calculationperiod)
                                                        }
                                                        else
                                                        {
                                                            <label>N/A</label>
                                                        }

                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.IsearningDeduction)
                                                    </td>


                                                    <td>
                                                      
                                                            @Html.DisplayFor(modelItem => item.Percentage)
                                                       
                                                    </td>


                                                    <td>@Html.DisplayFor(modelItem => item.Value)</td>

                                                    <td>
                                                        @if (item.Status != null)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.Status)
                                                        }
                                                        else
                                                        {
                                                            <label>N/A</label>

                                                        }

                                                    </td>

                                                    @*<td>
                                    @if (item.compute != null)
                                    {
                                        @Html.DisplayFor(modelItem => item.compute)
                                    }
                                    else
                                    {
                                        <label>N/A</label>

                                    }
                                </td>*@

                                                    <td>

                                                        <a href="@Url.Action("EditVariable", "VariableSettings", new { id = item.VariableId })" class="">
                                                            <i class="fa fa-pencil-square"></i>
                                                        </a>
                                                    </td>


                                                    <td>
                                                        <a data-toggle="modal" data-target="#myModalVariableDelete" href='@Url.Action("DeleteVariable", new {id = item.VariableId})'><i class="fa fa-trash"></i></a>
                                                    </td>

                                                    <div class="modal fade" id="myModalVariableDelete" role="dialog"></div>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                @*<div class="box-footer">
                        <div class="input-group box-tools pull-right">
                            <a href='@Url.Action("Create")' class="btn btn-success"><i class="fa fa-plus"></i></a>
                        </div>
                    </div>*@
            </div>
        </section>
    </div>
</section>

<script>
    $(function () {
        $(document).ready(function () {
            $(".table").DataTable({
                "ordering": false,
                "pageLength": 20,
                searching: false,
                paging: false,
                dom: "Bfrtip",
                buttons: [
                    "copy", "csv", "excel", "pdf", "print"
                ]
            });
        });

    });

</script>


<script type="text/javascript">

    $.noConflict();
    jQuery(document).ready(function () {
        if (true) {
            if ('@TempData["notice"]' === "success") {
                $.notify(" Record Inserted  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "update") {
                $.notify(" Record Updated  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "exist") {
                $.notify(" Record Already Exist ! ", "warn");
            }
            if ('@TempData["notice"]' === "delete") {
                $.notify(" Record Deleted Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "cantdelete") {
                $.notify(" Can't delete, because this used some where. ! ", "warn");
            }
            if ('@TempData["notice"]' === "CopyPayheads") {
                $.notify("Payheads replicate Successfully ! ", "success");
            }
        }
    });
</script>