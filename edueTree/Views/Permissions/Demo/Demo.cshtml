@model edueTree.Models.DemoModel

@{
    ViewBag.Title = "Demo";
}

<h2> Payment Form</h2>


<section class="content">
    <div class="row">
        <section class="col-lg-7 connectedSortable">
            <div class="box box-success">
                <div class="box-header">
                    <h3 class="box-title">Add Payment Information</h3>
                </div>
                <div class="box-body chat" id="chat-box">
                    <div class="item">
                        @using (Html.BeginForm())
                        {
                            <div class="form-horizontal">
                                <div style="margin-left: 20px">
                                    <div class="form-group">
                                        @Html.Label("First Name", new { @class = "control-label col-md-3" })
                                        <div class="col-md-7">
                                            @Html.TextBox("txtfirstname", null, new { @class = "form-control", required = "required" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Amount", new {@class = "control-label col-md-3"})
                                        <div class="col-md-7">
                                            @Html.TextBox("txtamount", null, new {@class = "form-control", required = "required"})
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        @Html.Label("Email Id", new { @class = "control-label col-md-3" })
                                        <div class="col-md-7">
                                            @Html.TextBox("txtemail", null, new { @class = "form-control", required = "required" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Phone", new { @class = "control-label col-md-3" })
                                        <div class="col-md-7">
                                            @Html.TextBox("txtphone", null, new { @class = "form-control", required = "required" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Product Info", new { @class = "control-label col-md-3" })
                                        <div class="col-md-7">
                                            @Html.TextBox("txtprodinfo", null, new { @class = "form-control", required = "required" })
                                        </div>
                                    </div>
                                                                   
                                    @*@Html.Label("Success URL")<br />
                                        @Html.TextBox("txtsurl")<br />
                                        @Html.Label("Failure URL")<br />
                                        @Html.TextBox("txtfurl")<br />*@
                                    <br />
                                    <center>
                                        <button type="submit" class="btn btn-success">Submit</button>
                                    </center> 
                                </div>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>
