<div class="box box-success">
    <div class="box-header">
        <i class="fa fa-calendar"></i>
        <h3 class="box-title">Permission List</h3>
    </div>
    <div class="box-body chat" id="chat-box">
        <div class="item">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("Roles name")
                        </th>
                        <th>
                            @Html.DisplayName("Menu name")
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model.GroupBy(a => a.AspNetRole.Name))
                    {
                        <tr>
                            <td> @Html.DisplayFor(modelItem => role.Key)</td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        foreach (var item in role)
                        {
                            <tr>
                                <td></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MenuItem.itemName)
                                </td>
                                <td>
                                    @Html.EncodedActionLink("<i class='fa fa-pencil-square'></i>", "Edit", "Permissions", new { id = item.permissionId }, null)
                                </td>
                                <td>
                                    <a data-toggle="modal" data-target="#myModalPermissionDelete" href='@Url.Action("Delete", new { id = item.permissionId })'><i class="fa fa-trash"></i></a>

                                </td>


                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="modal fade" id="myModalPermissionDelete" role="dialog"></div>
