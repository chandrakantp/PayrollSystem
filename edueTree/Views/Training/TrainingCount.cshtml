@model IEnumerable<edueTree.Models.TrainingModel>
@{
    ViewBag.Title = "MachineData";

}
<section class="content-header">
    <h1>
        @*Attendance sheet*@
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Training </a></li>
        <li class="active">Count Report</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <section class="col-md-12">
            <div class="box box-success">
                <div class="box-header">
                    <i class="fa fa-search"></i>
                    <h3 class="box-title">Training Count Search Options - You can search Daily,Weekly & Monthly </h3>
                </div>

                <div class="box-body chat">
                    <div class="item">
                        @using (Html.BeginForm("TrainingCount", "Training", FormMethod.Get))
                {
                <div class="form-horizontal">

                    <div class="form-group">
                        @*@Html.Label("From Date:", new { @class = "control-label col-md-2" })*@
                        <div class="col-md-3">
                            @Html.TextBox("datepicker", null, new { id = "datepicker1", @class = "form-control", @placeholder = "From Date" })
                        </div>

                        @*@Html.Label("To Date:", new { @class = "control-label col-md-1" })*@
                        <div class="col-md-3">
                            @Html.TextBox("datepicker2", null, new { id = "datepicker2", @class = "form-control", @placeholder = "To Date" })
                        </div>
                        <div class="col-md-1">
                            <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-filter"></i> Filter</button>
                        </div>
                    </div>
                </div>
                }
                    </div>
                </div>
            </div>
        </section>


        <section class="col-md-12">
            <div class="box box-success">
                <div class="box-header">
                    <i class="fa fa-calendar"></i>
                    <h3 class="box-title">Training Date-wise count</h3>
                </div>
                <div class="box-body chat" id="chat-box">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Department Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Total manpower")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Total No of Hours")
                                    </th>

                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.manpower)</td>
                                        <td>@Html.DisplayFor(modelItem => item.totaltraning)</td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>




<script type="text/javascript">
    $(document).ready(function () {
        $('#datepicker2').datepicker({
            dateFormat: "dd/mm//yy",
            autoclose: true
        });

        $('#datepicker1').datepicker({
            dateFormat: "dd/mm/yy",
            autoclose: true
        });

    });


</script>

<script>
    $(function () {
        //$.noConflict();
        //$("#example1").DataTable();
        $(document).ready(function () {
            $('.table').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });

    });

</script>