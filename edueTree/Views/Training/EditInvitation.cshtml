@model edueTree.Models.TrainingFeedbackModel

@{
    ViewBag.Title = "EditInvitation";
}
@{
    var trainingRepetition = new SelectList(new[]
    {
         
          new SelectListItem{ Text="Present", Value = "Present" },
          new SelectListItem{ Text="Absent", Value = "Absent" }
         
    }, "Value", "Text");

}

<section class="content-header">
    <h1>
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Training</a></li>
        <li class="active">Manage</li>
    </ol>
</section>

<section class="content">
    <div class="row">

        <div class="col-md-12">
            @using (Html.BeginForm("EditInvitationpost", "Training"))
            {
                @Html.AntiForgeryToken()

                <div class="box box-success">
                    <div class="box-header">
                        @*<button type="button" class="close" data-dismiss="modal">&times;</button>*@
                        <h4 class="box-title"> Edit Training Invitation</h4>
                    </div>
                    <div class="box-body">
                        <div class="col-md-12">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model=>model.TrainingId)
                            @Html.HiddenFor(model=>model.Id)
                       
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Repetation</label>
                                    @Html.DropDownList("Status", trainingRepetition, new { id = "Status", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Status)

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Please Fill your valuable feedback</label>
                                    @Html.TextAreaFor(model => model.Feedback, new { @class = "form-control" })
                                      @Html.ValidationMessageFor(model => model.Feedback)

                                </div>
                            </div>


                        </div>


                    </div>
                    <div class="box-footer">
                        <input type="submit" value="Submit" class="btn btn-default pull-right" />
                    </div>
                </div>

            }
        </div>
   </div>
</section>

