@model edueTree.Models.HolidayModel

@{
    ViewBag.Title = "Create";
    //Layout = null;
}
<section class="content-header">
    <div class="row">
        <div class="col-md-12">
            <div class="">
                <a data-toggle="modal" data-target="#myModal" class="btn btn-success pull-right">
                    <i class="fa fa-plus-square"></i> Add Holiday
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content-header">
    <h1>
        @*Holiday*@
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Holiday/Index"><i class="fa fa-dashboard"></i>Holiday</a></li>
        <li class="active">Manage</li>
    </ol>
</section>

<div class="content">
    <div class="row">
        <section class="col-md-12">
            <div id="myModal" class="modal fade" role="dialog">
                @using (Html.BeginForm())
                {
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title"> Add Holiday</h4>
                            </div>
                            <div class="modal-body chat" id="chat-box">

                                @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true)
                                    <div class="form-group">

                                        <div class="col-md-6">
                                            <label>Holiday</label>
                                            @Html.TextBoxFor(model => model.holidayName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.holidayName)
                                        </div>
                                        <div class="col-md-6">
                                            <label>Date</label>
                                            @Html.TextBoxFor(model => model.date, new { id = "dtpicker", @class = "form-control datepicker" })
                                            @Html.ValidationMessageFor(model => model.date)
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="modal-footer">
                                <input type="submit" value="Add" class="btn btn-default pull-right" />
                            </div>
                        </div>
                    </div>
                }
            </div>
            @{Html.RenderAction("Index", "Holiday");}
        </section>
    </div>
</div>

<!-- Success Notice-->
<script type="text/javascript">
    $.noConflict();
    jQuery(document).ready(function () {
        if (true) {
            if ('@TempData["notice"]' === "success") {
                $.notify(" Record Inserted  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "update") {
                $.notify(" Record Updated  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "exist") {
                $.notify(" Record Already Exist ! ", "warn");
            }
            if ('@TempData["notice"]' === "delete") {
                $.notify(" Record Deleted Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "cantdelete") {
                $.notify(" Can't delete, because this used some where. ! ", "warn");
            }
        }

    });
</script>





