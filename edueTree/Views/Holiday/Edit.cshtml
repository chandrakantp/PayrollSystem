@model edueTree.Models.Holiday

@{
    ViewBag.Title = "Edit";
    //Layout = null;
}

<section class="content-header">
    <h1>
        @*Holiday*@
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Holiday/Index"><i class="fa fa-dashboard"></i> Holiday</a></li>
        <li class="active">Edit</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <section class="col-md-12">
            @using (Html.BeginForm())
            {
                <div class="box box-success">
                    <div class="box-header">
                        <i class="fa fa-calendar-plus-o"></i>
                        <h3 class="box-title">Edit Holiday</h3>

                    </div>
                    <div class="box-body">
                        <div class="item">

                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">

                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.holidayId)
                                @Html.HiddenFor(model => model.firmId)
                                <div class="form-group">

                                    <div class="col-md-4">
                                        <label>Holiday</label>
                                        @Html.TextBoxFor(model => model.holidayName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.holidayName)
                                    </div>
                                    <div class="col-md-4">
                                        <label>Date</label>
                                        @Html.TextBoxFor(model => model.date, new { @class = "form-control datepicker" })
                                        @Html.ValidationMessageFor(model => model.date)
                                    </div>
                                    
                                </div>

                            </div>

                        </div>
                    </div>
                    <div class="box-footer">
                        <input type="submit" value="Update" class="btn btn-default pull-right" />
                        <a href='@Url.Action("Create")' class="btn btn-default pull-left">Back to list</a>
                    </div>

                </div>
            }
        </section>
    </div>
</section>

