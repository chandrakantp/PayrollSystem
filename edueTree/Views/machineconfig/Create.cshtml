@model edueTree.Models.ConfigMachine
<section class="content-header">
    <h1>
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Machine Configuration</a></li>
        <li class="active">Add</li>
    </ol>
</section>
<section class="content-header">
    <div class="row">
        <div class="col-md-12">
            <div class="">
                <a data-toggle="modal" data-target="#myModal" class="btn btn-success pull-right">
                    <i class="fa fa-plus-square"></i> Add New Machine
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <section class="col-md-12">
            <div id="myModal" class="modal fade" role="dialog">
                @using (Html.BeginForm())
                {
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h3 class="modal-title">Add Machine Configuration</h3>
                            </div>
                            <br />
                            <div class="modal-body chat" id="chat-box">
                                <div class="item">

                                    @Html.AntiForgeryToken()
                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true)

                                        <div class="form-group">

                                            <div class="col-md-4">
                                                <label>IP Address</label>
                                                @Html.TextBoxFor(model => model.IPAddress, new { @id = "IPAddress", @class = "form-control", placeholder = ".../.../.../..." })
                                                @Html.ValidationMessageFor(model => model.IPAddress)
                                            </div>

                                            <div class="col-md-4">
                                                <label>Port No</label>
                                                @Html.TextBoxFor(model => model.Port, new { id = "Port", @class = "form-control", placeholder = "enter port Number" })
                                                @Html.ValidationMessageFor(model => model.Port)

                                            </div>
                                            <div class="col-md-4">
                                                <label>Serial Key</label>
                                                @Html.TextBoxFor(model => model.SerialKey, new { id = "SerialKey", @class = "form-control", placeholder = "SerialKey" })
                                                @Html.ValidationMessageFor(model => model.SerialKey)

                                            </div>
                                        </div>



                                        <div class="form-group">
                                            <div class="col-md-offset-3 col-md-10">

                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>
                            <div class="modal-footer">
                                <input type="submit" value="Add" class="btn btn-default pull-right" />
                                <a data-dismiss="modal" class="btn btn-default pull-left">
                                    Cancel
                                </a>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
        <section class="col-md-12">
            @{Html.RenderAction("Index", "MachineConfig");}
        </section>
    </div>
</section>

