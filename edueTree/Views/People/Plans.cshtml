
@model edueTree.Models.PricingModel

@{
    ViewBag.Title = "Plans";
}

<section class="content">
    <div class="row">
        <section class="col-lg-7 connectedSortable">
            <div class="box box-success">
                <div class="box-header">
                    <h3 class="box-title">Add Payment Information</h3>
                </div>
                <div class="box-body chat" id="chat-box">
                    <div class="item">
                        @using (Html.BeginForm())
                        {
                            @Html.HiddenFor(m=>m.Amount)
                            
                            <div class="form-horizontal">
                                <div style="margin-left: 20px">
                                    <div class="form-group">
                                        @Html.Label("First Name", new { @class = "control-label col-md-3" })
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(m=>m.FirstName, new { @class = "form-control", required = "required" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Email Id", new { @class = "control-label col-md-3" })
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(m=>m.Email , new { @class = "form-control", required = "required" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Phone", new { @class = "control-label col-md-3" })
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(m=>m.Phone, new { @class = "form-control", required = "required" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Pay for", new { @class = "control-label col-md-3" })
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(m=>m.ProductInfo, new { @class = "form-control", required = "required" })
                                        </div>
                                    </div>                                   
                                    <br />
                                    <center>
                                        <button type="submit" class="btn btn-success">Submit & Proceed</button>
                                    </center>
                                </div>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>
