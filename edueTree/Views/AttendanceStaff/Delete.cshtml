@model edueTree.Models.AttendanceStaff

<section class="content-header">
    <h1>
        Delete Staff Attendance
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Attendance</a></li>
        <li class="active">Add</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <section class="col-lg-6 connectedSortable">
            <div class="box box-success">
                <div class="box-header">
                    <h3>Are you sure you want to delete this?</h3>
                </div>
                <hr />
                <div class="box-body chat" id="chat-box">

                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayName("Enroll Number:")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.enrollNumber)
                        </dd>
                        <br/>
                        <dt>
                            @Html.DisplayName("Attend Date:")
                        </dt>

                        <dd>
                            @Convert.ToDateTime(Model.attendDate).ToString("dd MMM yyyy")
                        </dd>
                        <br />
                        <dt>
                            @Html.DisplayName("Check IN/OUT Status:")

                        </dt>

                        <dd>
                            @if (Model.inOutMode == 1)
                            {
                                @Html.DisplayName("Check IN")
                            }
                            else
                            {
                                @Html.DisplayName("Check Out")
                            }
                            @*@Html.DisplayFor(model => model.inOutMode)*@
                        </dd>
                    </dl>
                <hr/>                  
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        {
                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-10">
                                    <input type="submit" value="OK" class="btn btn-default"/>
                                    <a href='@Url.Action("Index")' class="btn btn-default">Back to list</a>
                                </div>
                            </div>

                        }
                    }

                </div>
                <br />
        </div>
    </section>
    </div>
    </section>