@model edueTree.Models.StructurepermissionModel

@{
    ViewBag.Title = "Edit";
}

<link href="~/plugins/select2/select2.min.css" rel="stylesheet" />
<script src="~/plugins/select2/select2.js"></script>
<section class="content-header">
    <h1>    
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>  structure Permission</a></li>
        <li class="active">Edit</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <section class="col-md-12">
            @using (Html.BeginForm())
            {
                <div class="box box-success">

                    <div class="box-header">
                        <i class="fa fa-check-square"></i>
                        <h3 class="box-title">Edit Structure</h3>

                    </div>
                    <div class="box-body chat" id="chat-box">
                        <div class="item">

                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">

                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.Id)
                                @Html.HiddenFor(model => model.Staffidnew)

                                <div class="form-group">
                                    <div class="col-md-6">
                                        <label>structure Name</label>
                                        @*@Html.DropDownList("feedformId", (SelectList)ViewBag.FormList, "--Choose Section--", new { @class = "form-control", required = "required" })*@

                                        @Html.DropDownList("StructId", (SelectList)ViewBag.Structlist, new { @class = "form-control select2", required = "required" })
                                        @Html.ValidationMessageFor(model => model.StructId)
                                    </div>
                                    <div class="col-md-6">
                                        <label>Employee Name</label>
                                        @Html.DropDownListFor(model => model.Staffidnew, Model.Staffidnewlist, new { @class = "form-control select2", @disabled = "disabled" })
                                        @*@Html.DropDownList("Staffidnew", (SelectList)ViewBag.Staffidnewlist, new { @class = "form-control", required = "required" })*@
                                        @Html.ValidationMessageFor(model => model.Staffidnew)
                                    </div>
                                </div>



                                <div class="form-group">
                                    <div class="col-md-offset-3 col-md-10">

                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                    <div class="box-footer">
                        <input type="submit" value="Update" class="btn btn-default pull-right" />
                        <a href='@Url.Action("Create")' class="btn btn-default pull-left">Back to list</a>
                    </div>
                </div>
            }
        </section>
    </div>
</section>
<script type="text/javascript">
    $(".select2").select2();
  

  
</script>