@using edueTree.Models
@model edueTree.Models.PerformModel
@{
    ViewBag.Title = "CreateForm";
}

<section class="content-header">
    <h1>
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Question</a></li>
        <li class="active">Update</li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <section class="col-md-12">
            @using (Html.BeginForm())
            {
                <div class="box box-success">

                    <div class="box-header">
                        <i class="fa fa-user"></i>
                        <h3 class="box-title"> Update Questions</h3>
                    </div>
                    <div class="box-body">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(s=>s.QuestionId)
                        @Html.HiddenFor(s => s.firmid)
                        <div class="col-md-12">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Section:</label>                                
                                    @Html.DropDownList("SectionsId", (SelectList)ViewBag.SectionsList, "--Choose Section--", new { @class = "form-control", required = "required" })
                                    </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>weightage:</label>
                                    @Html.TextBoxFor(model => model.weightage, new { id = "weightage", @class = "form-control", placeholder = "enter weightage in %", required = "required" })
                                    @Html.ValidationMessageFor(model => model.weightage, string.Empty, new { @class = "help-block" })

                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Question:</label>
                                    @Html.TextAreaFor(model => model.QuestionName, new { id = "Question", @class = "form-control", placeholder = "enter question", required = "required" })
                                    @Html.ValidationMessageFor(model => model.QuestionName, string.Empty, new { @class = "help-block" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <input type="submit" value="Update" class="btn btn-default pull-right" />
                        <a href='@Url.Action("CreateForm")' class="btn btn-default pull-left">Back to list</a>
                    </div>

                </div>
            }
        </section>      
    </div>
</section>


<script type="text/javascript">
    $.noConflict();
    jQuery(document).ready(function () {
        if (true) {
            if ('@TempData["notice"]' === "success") {
                $.notify(" Record Inserted  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "update") {
                $.notify(" Record Updated  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "exist") {
                $.notify(" Record Already Exist ! ", "warn");
            }
            if ('@TempData["notice"]' === "delete") {
                $.notify(" Record Deleted Successfully ! ", "error");
            }
            if ('@TempData["notice"]' === "cantdelete") {
                $.notify(" Can't delete, because this Shift used some where. ! ", "warn");
            }
        }

    });
</script>