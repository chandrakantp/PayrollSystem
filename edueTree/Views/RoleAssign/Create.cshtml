@model edueTree.Models.UserRoleModel

@{
    ViewBag.Title = "Create";
}
<section class="content-header">
    <div class="row">
        <div class="col-md-12">
            <div class="">
                <a data-toggle="modal" data-target="#myModal" class="btn btn-success pull-right">
                    <i class="fa fa-plus-square"></i> Assign Role
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content-header">
    <h1>
        @*Holiday*@
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Holiday/Index"><i class="fa fa-dashboard"></i>Assignment</a></li>
        <li class="active">Create</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <section class="col-md-12">
            <div id="myModal" class="modal fade" role="dialog">
                @using (Html.BeginForm())
                {
                     <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Assign Role</h4>

                            </div>
                            <div class="modal-body">


                                @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true)
                                    <div class="form-group">

                                        <div class="col-md-12">
                                            <label>User Name</label>
                                            @Html.DropDownList("userId", null, String.Empty, new { @class = "form-control", required = "required" })
                                            @Html.ValidationMessageFor(model => model.userId)
                                        </div>
                                    </div>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <label>Role Name</label>
                                                @Html.DropDownList("RoleId", null, String.Empty, new { @class = "form-control", required = "required" })
                                                @Html.ValidationMessageFor(model => model.RoleId)
                                            </div>
                                        </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <input type="submit" value="Add" class="btn btn-default pull-right" />
                            </div>
                    </div></div>
                }
                </div>
                @{Html.RenderAction("Index", "RoleAssign");}
</section>
</div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $.noConflict();
    jQuery(document).ready(function () {
        if (true) {
            if ('@TempData["notice"]' === "success") {
                $.notify(" Record Inserted  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "update") {
                $.notify(" Record Updated  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "exist") {
                $.notify(" Record Already Exist ! ", "warn");
            }
            if ('@TempData["notice"]' === "delete") {
                $.notify(" Record Deleted Successfully ! ", "error");
            }
            if ('@TempData["notice"]' === "cantdelete") {
                $.notify(" Can't delete, because this used some where. ! ", "warn");
            }
        }

    });
</script>