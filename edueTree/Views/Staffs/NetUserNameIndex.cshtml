@model IEnumerable<edueTree.Models.TblNetDurationUsersName>
@{
    Layout = null;
}

<div class="row">
    <section class="col-md-12">
        <div class="box box-success">
            <div class="box-header">
                <i class="fa fa-calendar"></i>
                <h3 class="box-title"> Employee's Event Log User-name List</h3>
            </div>

            <div class="box-body">
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>
                                Employee Name
                            </th>
                            <th>
                               Event Log User Name
                            </th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelitem => item.Staff.schoolCode)
                                        @Html.DisplayFor(modelitem => item.Staff.firstName)
                                        @Html.DisplayFor(modelitem => item.Staff.lastName)
                                    </td>

                                    <td>@Html.DisplayFor(modelItem => item.UserNames)</td>
                                    <td>  <a href="@Url.Action("UserNameEdit", "Staffs", new { id = item.NetUsersNameId })"> <i class="fa fa-pencil-square"></i></a></td>
                                    <td>
                                        <a data-toggle="modal" data-target="#myModalAssignDelete" href='@Url.Action("DeleteUsername", new { id = item.NetUsersNameId })'><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
                <div class="modal fade" id="myModalAssignDelete" role="dialog"></div>
            </div>
        </div>
    </section>
</div>

<script type="text/javascript">
    $(".select2").select2();
    $.noConflict();
    jQuery(document).ready(function () {
        if (true) {
            if ('@TempData["notice"]' === "success") {
                $.notify(" Record Inserted  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "update") {
                $.notify(" Record Updated  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "exist") {
                $.notify(" Record Already Exist ! ", "warn");
            }
            if ('@TempData["notice"]' === "delete") {
                $.notify(" Record Deleted Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "cantdelete") {
                $.notify(" Can't delete, because this used some where. ! ", "warn");
            }
        }

    });
</script>

