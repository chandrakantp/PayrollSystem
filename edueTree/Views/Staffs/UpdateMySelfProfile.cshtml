                                        @Html.ValidationMessageFor(model => model.staffCode)
                                    </div>
                                </div>
                                <div class="form-group ">
                                    @Html.Label("Enroll Number:", new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.enrollNumber, new { @class = "form-control", @disabled = "disabled" })                                    
