<script type="text/javascript">

    $('#dob').datepicker({
        dateFormat: 'dd-mm-yy',
        minDate: '+5d',
        changeMonth: true,
        changeYear: true,
        autoclose: true,
        dob: "#dob",
        altFormat: "yy-mm-dd"
    }).on('changeDate', function (ev) {
        $(this).datepicker('hide');
    });;


    $(document).ready(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_flat-red',
            radioClass: 'iradio_flat-red'
        });
    });


</script>