                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Temp pincode:", new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.tempPincode, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.tempPincode)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Temp area:", new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.tempArea, new { @class = "form-control" })
