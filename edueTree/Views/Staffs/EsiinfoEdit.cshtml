@model edueTree.Models.EsiinfoModel

@{
    ViewBag.Title = "EsiFormCreate";
}
<section class="content">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("esiinfoedit", "staffs"))
            {
                <div class="box box-success">
                   @Html.HiddenFor(a=>a.esiid)
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="box-header">
                        <h4>Edit ESI Info</h4>
                    </div>
                    <div class="box-body">
                        <div class="col-md-12">

                            <h4 class="label-info"> <i class="fa fa-plus-square"></i> Insured Person’s Particulars</h4>

                            <div class="col-md-4">
                                <div class="form-group ">
                                    <label>Staff / Emp code:</label>
                                    @Html.TextBoxFor(model => model.staffid1, new { id = "staffId", @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.staffid1, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="StaffCodeMessage" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group ">
                                    <label>Name:</label>
                                    @Html.TextBoxFor(model => model.Name, new { id = "EnrollNumber", @class = "form-control", placeholder = "enter enroll number", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.Name, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="enrollNumberMessage" />

                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Father name:</label>
                                    @Html.TextBoxFor(model => model.fathername, new { id = "fathername", @class = "form-control", placeholder = "enter Father Name", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.fathername, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="FirstNameMessage" />
                                </div>
                            </div>

                        </div>
                        <div class="col-md-12">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Date of Birth:</label>
                                    @Html.TextBoxFor(model => model.dateofbirth, new { id = "dateofbirth", @class = "form-control", placeholder = "Date of Birth", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.dateofbirth, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="MiddleNameMessage" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Martial Status:</label>
                                    @Html.RadioButtonFor(model => model.marriedstatus, true, new { name = "martialstatus", id = "Martialstatus" }) Married

                                    @Html.RadioButtonFor(model => model.marriedstatus, false, new { name = "martialstatus", id = "Martialstatus" }) Unmarried
                                    <span class="help-block" id="LastNameMessage" />

                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Gender:</label>
                                    @Html.RadioButtonFor(model => model.gender, 1, new { name = "gender", id = "Gender" }) Male

                                    @Html.RadioButtonFor(model => model.gender, 0, new { name = "gender", id = "Gender" }) Female

                                    @*@Html.ValidationMessageFor(model => model.Gender, string.Empty, new { @class = "help-block" })*@
                                    <span class="help-block" id="GenderMessage"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-4">
                                <div class="form-group">

                                    <label>Permanant Address</label>
                                    @Html.TextBoxFor(model => model.peraddress, new { id = "peraddress", @class = "form-control", placeholder = "permanant Address", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Pin:</label>
                                    @Html.TextBoxFor(model => model.pin, new { id = "pin", @class = "form-control", placeholder = "Pin", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.pin, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="pin" />

                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Branch office:</label>
                                    @Html.TextBoxFor(model => model.branchoffice, new { id = "branchoffice", @class = "form-control", placeholder = "Enter Branch Office" })
                                    @Html.ValidationMessageFor(model => model.branchoffice, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="branchoffice" />
                                </div>
                            </div>

                        </div>
                        <div class="col-md-12">

                            <h4 class="label-info"> <i class="fa fa-plus-square"></i> Employer’s Particulars</h4>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Dispensary:</label>
                                    @Html.TextBoxFor(model => model.dispensary, new { id = "dispensary", @class = "form-control", placeholder = "enter dispensary" })
                                    @Html.ValidationMessageFor(model => model.dispensary, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="dispensary" />

                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group ">

                                    <label>Date of Appointment:</label>
                                    @Html.TextBoxFor(model => model.dateofappoint, new { id = "dateofappoint", @class = "form-control datepicker", placeholder = "Appointment Date" })
                                    @Html.ValidationMessageFor(model => model.dateofappoint, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="dateofappoint" />

                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group ">

                                    <label>Name & Address of the employer:</label>
                                    @Html.TextBoxFor(model => model.CurEmployeraddressname, new { id = "CurEmployeraddressname", @class = "form-control", placeholder = "Name & Address of the employer" })
                                    @Html.ValidationMessageFor(model => model.CurEmployeraddressname, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="CurEmployeraddressname" />
                                </div>
                            </div>

                        </div>
                        <div class="col-md-12">
                            <div class="col-md-4">
                                <div class="form-group ">
                                    <label>Previous Ins. No.:</label>
                                    @Html.TextBoxFor(model => model.preinsuranceno, new { id = "preinsuranceno", @class = "form-control", placeholder = "previous Insurance No" })
                                    @Html.ValidationMessageFor(model => model.preinsuranceno, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="TempAddressMessage" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Emplrs. Code No.</label>
                                    @Html.TextBoxFor(model => model.preempolyecode, new { id = "preempolyecode", @class = "form-control", placeholder = "Previous Empolyee Code" })
                                    @Html.ValidationMessageFor(model => model.preempolyecode, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="TempAreaMessage" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">

                                    <label>Pre org Name & Add. of the employer:</label>
                                    @Html.TextBoxFor(model => model.Employeraddressname, new { id = "Employeraddressname", @class = "form-control", placeholder = "Prevoius Employer Name and Address" })
                                    @Html.ValidationMessageFor(model => model.Employeraddressname, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="TempPincodeMessage" />
                                </div>
                            </div>
                        </div>
                        @*<div class="col-md-12">
                            <h4 class="label-info"><i class="fa fa-plus-square"></i> Details of the nominee u/s 71 of ESI Act1948 / Rule 56(2) of ESI (Central) Rules 1950 for payment of cash benefit in the event of death</h4>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Name of the Nominee</label>
                                    @Html.TextBoxFor(model => model.nomineename, new { id = "nomineename", @class = "form-control", placeholder = "Name of the Nominee" })
                                    @Html.ValidationMessageFor(model => model.nomineename, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="PerAddressMessage" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">

                                    <label>Relationship with insured person</label>
                                    @Html.TextBoxFor(model => model.relationship, new { id = "relationship", @class = "form-control", placeholder = "Relationship with insured person" })
                                    @Html.ValidationMessageFor(model => model.relationship, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="PerAreaMessage" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">

                                    <label>Nominee Address</label>
                                    @Html.TextBoxFor(model => model.nomaddress, new { id = "nomaddress", @class = "form-control", placeholder = "Nominee Address" })
                                    @Html.ValidationMessageFor(model => model.nomaddress, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="PerPincodeMessage" />

                                </div>
                            </div>
                        </div>*@
                        <div class="col-md-12">

                            <h4 class="label-info"> <i class="fa fa-plus-square"></i> ESI CORPORATION</h4>
                            <div class="col-md-4">
                                <div class="form-group">

                                    <label> Corporation Name</label>
                                    @Html.TextBoxFor(model => model.corponame, new { id = "corponame", @class = "form-control", placeholder = "Corporation Name" })
                                    @Html.ValidationMessageFor(model => model.corponame, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="shiftIdMessage" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">

                                    <label> Corp Ins. No</label>
                                    @Html.TextBoxFor(model => model.corpinsno, new { id = "JoiningDate", @class = "form-control", placeholder = "corporation Ins No" })
                                    @Html.ValidationMessageFor(model => model.corpinsno, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="JoiningDateMessage" />

                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">

                                    <label>Father’s/ Husband’s Name</label>
                                    @Html.TextBoxFor(model => model.corpfathername, new { id = "corpfathername", @class = "form-control", placeholder = "Father Name " })
                                    @Html.ValidationMessageFor(model => model.corpfathername, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="DesignationIdMessage" />
                                </div>
                            </div>

                        </div>
                        <div class="col-md-12">
                            <div class="col-md-4">
                                <div class="form-group">

                                    <label>Corp Branch Office</label>
                                    @Html.TextBoxFor(model => model.corpbranchoffice, new { id = "corpbranchoffice", @class = "form-control", placeholder = "Branch Office " })

                                    @Html.ValidationMessageFor(model => model.corpbranchoffice, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="DesignationIdMessage" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Date of Entry</label>
                                    @Html.TextBoxFor(model => model.dateofentry, new { id = "dateofentry", @class = "form-control datepicker", placeholder = "Date of Entry " })
                                    @Html.ValidationMessageFor(model => model.dateofentry, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="DeptIdMessage" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">

                                    <label> Corp Date of Birth</label>
                                    @Html.TextBoxFor(model => model.corpdob, new { id = "corpdob", @class = "form-control datepicker", placeholder = "Enter Date of Birth" })
                                    @Html.ValidationMessageFor(model => model.corpdob, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="EmergencyContact1Message" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-4">
                                <div class="form-group">

                                    <label> Dispensary</label>
                                    @Html.TextBoxFor(model => model.corpDispensary, new { id = "corpDispensary", @class = "form-control", placeholder = "Corporation Dispensary" })
                                    @Html.ValidationMessageFor(model => model.corpDispensary, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="EmergencyContact1Message" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">

                                    <label>Name, Add & Code No. of the emp</label>
                                    @Html.TextBoxFor(model => model.corpnameaddresscode, new { id = "corpnameaddresscode", @class = "form-control", placeholder = "Name, Address & Code No. of the employer" })
                                    @Html.ValidationMessageFor(model => model.corpnameaddresscode, string.Empty, new { @class = "help-block" })
                                    <span class="help-block" id="EmergencyContact1Message" />
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="box-footer">
                        <input type="submit" value="Save" class="btn btn-default pull-right" />
                        <a href='@Url.Action("StaffDashboard", "Staffs", new { staffid =Model.staffid1 })' class="btn btn-default pull-left">Back to list</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
