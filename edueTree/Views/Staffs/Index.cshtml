@using edueTree.Helpers
@model IEnumerable<edueTree.Models.StaffModel>
<script type="text/javascript">
    function onchangeevent() {
        var value = $("#txtid").val();
        jQuery.ajax({
            type: "POST",
            url: "../Staffs/Index",
            data: { str: value },
            datatype: "json",
            success: function (response) {
                alert(response);
            }
        });

    }
</script>
<style type="text/css">
    .jumbotron {
        background-color: #ffffff;
        padding-bottom: 46px;
        padding-top: 0;
    }

    .box-header {
        padding: 5px;
    }
</style>

<link href="~/plugins/select2/select2.css" rel="stylesheet" />
<script src="~/plugins/select2/select2.js"></script>

    <section class="content-header">
        <div class="row">
            <div class="col-md-12">

                <a href='@Url.Action("Create")' class="btn btn-success pull-right">
                    <i class="fa fa-plus-square"></i> Add New Employee
                </a>

            </div>
        </div>
    </section>
    <section class="content-header">
        <h1>

            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Staff</a></li>
            <li class="active">Index</li>
        </ol>
    </section>
    <section class="col-md-12">
        <div class="box box-success">
            <div class="box-header">
                <i class="fa fa-search"></i>
                <h3 class="box-title">Search Employee</h3>
            </div>
            <div class="box-body chat">
                <div class="item">
                    @using (Html.BeginForm("Index", "Staffs", FormMethod.Get))
                    {
                        <div class="form-horizontal">
                            <div class="row">
                                @*<div class="col-md-5">
                                    <div class="form-group ">
                                        @Html.Label("First name:", new { @class = "control-label col-md-3" })
                                        <div class="col-md-9">
                                            @Html.TextBox("searchString", null, new { @placeholder = "Enter First name, Last Name, Emp code...", @class = "form-control" })
                                        </div>
                                    </div>
                                </div>*@
                                <div class="col-md-5">
                                    <div class="form-group ">
                                        @Html.Label("Designation:", new { @class = "control-label col-md-3" })
                                        <div class="col-md-9">
                                            @Html.DropDownList("designationId", (IEnumerable<SelectListItem>)ViewBag.degreeId, "---- Select Designation ----", new { @class = "form-control select2" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
