@{
    ViewBag.Title = "ChangePasswordForSuperadmin";
    Layout = "~/Views/Shared/_LayoutSuperadmin.cshtml";
}

<br />
<section class="content">
    <div class="row">

        <section class="col-md-12">
            <div class="box box-success">
                <div class="box-header">
                    <i class="fa fa-key"></i>
                    <h3 class="box-title">Change password</h3>

                    <hr />
                </div>
                <div class="box-body chat" id="chat-box">
                    <div class="item">
                        <div class="col-md-12">
                            @if (ViewBag.HasLocalPassword)
                            {
                                @Html.Partial("_ChangePasswordPartialSuperadmin")
                            }
                            else
                            {
                                @Html.Partial("_SetPasswordPartialSuperadmin")
                            }
                        </div>
                    </div>

                </div>
            </div>
        </section>
    </div>
</section>


<script type="text/javascript">
    $.noConflict();
    jQuery(document).ready(function() {
        if (true) {
            if ('@TempData["notice"]' === "success") {
                $.notify(" Record Inserted  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "update") {
                $.notify(" Record Updated  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "exist") {
                $.notify(" Record Already Exist ! ", "warn");
            }
            if ('@TempData["notice"]' === "delete") {
                $.notify(" Record Deleted Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "cantdelete") {
                $.notify(" Can't delete, because this used some where. ! ", "warn");
            }
            if ('@TempData["notice"]' === "change") {
                $.notify(" Password Change Successfully ! ", "success");
            }
        }

    });
</script>