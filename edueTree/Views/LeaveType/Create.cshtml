@model edueTree.Models.LeaveTypeModel

@{
    ViewBag.Title = "Create";

}
<section class="content-header">
    <div class="row">
        <div class="col-md-12">
            <div class="">
                <a data-toggle="modal" data-target="#myModal" class="btn btn-success pull-right">
                    <i class="fa fa-plus-square"></i> Add Leave Type
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content-header">
    <h1>
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/LeaveType/Index"><i class="fa fa-dashboard"></i>Leave Type</a></li>
        <li class="active">Add</li>
    </ol>
</section>
<section class="content">
    <div class="row">

        <div class="col-md-12">
            <div id="myModal" class="modal fade" role="dialog">
                @using (Html.BeginForm())
{
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Leave Type</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="col-md-5">
                        <div class="form-group">
                            <div class="col-md-12">
                                <label> Leave Type</label>
                                @Html.TextBoxFor(model => model.LeaveType1, new { @class = "form-control", placeholder = "Leave Type" })
                                @Html.ValidationMessageFor(model => model.LeaveType1)
                            </div>


                        </div>
                    </div>
                    @*<div class="col-md-4">
                        <div class="form-group">
                            <div class="col-md-12">
                                <label> Leave Count</label>
                                @Html.TextBoxFor(model => model.counts, new { @class = "form-control", placeholder = "Leave Count" })
                                @Html.ValidationMessageFor(model => model.counts)
                            </div>
                        </div>
                    </div>*@
                    @*<div class="col-md-4">
                        <div class="form-group">
                            <div class="col-md-12">
                                <label> Select Department</label>
                                @Html.DropDownListFor(model => model.deptId, Model.DepartmentList, " - Select Department - ", new { id = "DeptId", @class = "form-control", placeholder = "select department" })
                                @Html.ValidationMessageFor(model => model.deptId)

                            </div>
                        </div>
                    </div>*@
                </div>


            </div>
            <div class="modal-footer">
                <input type="submit" value="Add" class="btn btn-default pull-right" />
            </div>
            </div>
        </div>
}
            </div>
            @{Html.RenderAction("Index", "LeaveType");}
        </div>

    </div>
</section>

<script type="text/javascript">
    $.noConflict();
    jQuery(document).ready(function () {
        if (true) {
            if ('@TempData["notice"]' === "success") {
                $.notify(" Record Inserted  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "update") {
                $.notify(" Record Updated  Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "exist") {
                $.notify(" Record Already Exist ! ", "warn");
            }
            if ('@TempData["notice"]' === "delete") {
                $.notify(" Record Deleted Successfully ! ", "success");
            }
            if ('@TempData["notice"]' === "cantdelete") {
                $.notify(" Can't delete, because this used some where. ! ", "warn");
            }
        }

    });
</script>