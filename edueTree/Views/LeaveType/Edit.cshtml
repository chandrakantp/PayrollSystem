                        <i class="fa fa-calendar-plus-o"></i>
                        <h3 class="box-title">Edit Leave</h3>

                    </div>
                    <div class="box-body chat" id="chat-box">
                        <div class="item">

                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">

                                @Html.ValidationSummary(true)
