                                @Html.HiddenFor(model => model.firmId)
                                <div class="form-group">

                                    <div class="col-md-4">
                                        <label>LeaveType</label>
                                        @Html.TextBoxFor(model => model.LeaveType1, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.LeaveType1)
                                    </div>
                                    @*<div class="col-md-4">
                                        <label>Leave Count</label>
                                        @Html.TextBoxFor(model => model.counts, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.counts)
                                    </div>*@
                                    @*<div class="col-md-4">
                                        <label>Department</label>
                                        @Html.DropDownListFor(model => model.deptId, Model.DepartmentList, " - Select Department - ", new { @class = "form-control", placeholder = "select department" })
                                        @Html.ValidationMessageFor(model => model.deptId)

                                    </div>*@
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="box-footer">
                        <input type="submit" value="Update" class="btn btn-default pull-right" />
                        <a href='@Url.Action("Create")' class="btn btn-default pull-left">Back to list</a>
                    </div>

                </div>
            }
        </section>
    </div>
</section>
