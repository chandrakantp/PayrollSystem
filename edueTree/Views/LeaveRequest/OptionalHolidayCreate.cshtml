@model edueTree.Models.OptionalHolidayModel


<style type="text/css">
    .help-block {
        color: #BC3C3C;
    }
</style>

<section class="content-header">
    <div class="row">
        <div class="col-md-12">
            <div class="">
                <a data-toggle="modal" data-target="#myModal" class="btn btn-success pull-right">
                    <i class="fa fa-plus-square"></i> Add Optional Holiday
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content-header">
    <h1>
        @*Add Department*@
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Optional Holiday</a></li>
        <li class="active">Add</li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <section class="col-md-12">
            <div id="myModal" class="modal fade" role="dialog">
                @using (Html.BeginForm())
{
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Optional Holiday </h4>
            </div>
            <div class="modal-body">


                @*@Html.AntiForgeryToken()*@
                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    <div class="form-group">

                        <div class="col-md-6">
                            <label>Holiday Name</label>
                            @Html.TextBoxFor(model => model.optionalHolidayName, new { id = "Optional Holiday Name", @class = "form-control", placeholder = "enter Optional Holiday Name" })
                            @Html.ValidationMessageFor(model => model.optionalHolidayName, string.Empty, new { @class = "help-block" })
                        </div>
                        <div class="col-md-6">
                            <label>Holiday Date</label>
                            @Html.TextBoxFor(model => model.date, new { id = "date", @class = "form-control datepicker", placeholder = "Select Optional Holiday date" })
                            @Html.ValidationMessageFor(model => model.date, string.Empty, new { @class = "help-block" })
                        </div>
                    </div>

                </div>



            </div>
            <div class="modal-footer">
                <input type="submit" value="Add" class="btn btn-default pull-right" />
            </div>
        </div>
    </div>
}
                </div>
</section>
        <section class="col-md-12">
            @{Html.RenderAction("OptionalHolidayIndex", "LeaveRequest");}
        </section>
    </div>
</section>
