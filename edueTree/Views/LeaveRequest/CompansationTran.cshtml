@model edueTree.Models.CompansationTranModel
@{
    ViewBag.Title = "CompansationTran";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <section class="col-md-12">
            <div class="box box-success">
                <div class="box-header">
                    <i class="fa fa-calendar-plus-o"></i>
                    <h3 class="box-title">Compensation Request </h3>
                </div>
                <hr />
                <div class="box-body chat" id="chat-box">
                    <div class="item">
                        @using (Html.BeginForm())
                        {
                            <div class="form-horizontal" id="defaultForm">
                                @Html.ValidationSummary(true)

                                <div class="form-group">
                                    @Html.Label("Date:", new { @class = "control-label col-md-3" })
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(model => model.date, new { id = "date", @class = "form-control datepicker" })
                                        @Html.ValidationMessageFor(model => model.date)
                                    </div>

                                </div>

                                <br />
                                <div class="form-group">
                                    <div class="col-md-offset-3 col-md-10">
                                        <input type="submit" value="Send" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>

