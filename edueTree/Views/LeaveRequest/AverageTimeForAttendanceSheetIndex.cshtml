    <div class="box-header">
        <i class="fa fa-calendar"></i>
        <h3 class="box-title">Average Time For Attendance Sheet</h3>
        @{Html.RenderAction("EmployeeTimeForAttendanceSheet", "LeaveRequest");}
    </div>

    <div class="box-body">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Employee Name")
                    </th>
                    <th>
                        @Html.DisplayName("Working hr per day")
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Staff.staffCode) -
                            @Html.DisplayFor(modelItem => item.Staff.firstName)
                            @Html.DisplayFor(modelItem => item.Staff.lastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.hourtime)
                        </td>

                        <td>
                            @Html.EncodedActionLink("<i class='fa fa-pencil-square'></i>", "EditAverageTimeForAttendanceSheet", "LeaveRequest", new { id = item.AverageId }, null)
                        </td>

                        <td>
                            <a data-toggle="modal" data-target="#myModalDeptDeletefadeAttendance" href='@Url.Action("DeleteAverageTimeForAttendanceSheet", new {id = item.AverageId})'><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="modal fade" id="myModalDeptDeletefadeAttendance" role="dialog"></div>
    </div>
</div>

