@model edueTree.Models.OptionalHoliday

@{
    ViewBag.Title = "Edit";
}

<section class="content-header">
    <h1>
        
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> OptionalHoliday</a></li>
        <li class="active">Edit</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <section class="col-md-12">
            @using (Html.BeginForm())
            {
                <div class="box box-success">
                    <div class="box-header">
                        <i class="fa fa-check-square"></i>
                        <h3 class="box-title">Optional Holiday Edit</h3>

                    </div>
                    <div class="box-body">
                        <div class="item">

                            @*@Html.AntiForgeryToken()*@

                            <div class="form-horizontal">

                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.optionalId)

                                <div class="form-group">

                                    <div class="col-md-6">
                                        <label>Holiday Name</label>
                                        @Html.TextBoxFor(model => model.optionalHolidayName, new { id = "optionalHolidayName", @class = "form-control", placeholder = "enter Optional Holiday Name" })
                                        @Html.ValidationMessageFor(model => model.optionalHolidayName, string.Empty, new { @class = "help-block" })
                                    </div>
                                    <div class="col-md-6">
                                        <label>Holiday Date</label>
                                        @Html.TextBoxFor(model => model.date, new { id = "date", @class = "form-control datepicker", placeholder = "Select Optional Holiday date" })
                                        @Html.ValidationMessageFor(model => model.date, string.Empty, new { @class = "help-block" })
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="box-footer">
                        <input type="submit" value="Update" class="btn btn-default pull-right" />
                        <a href='@Url.Action("OptionalHolidayCreate")' class="btn btn-default pull-left">Back to list</a>
                    </div>
                </div>
            }
        </section>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
