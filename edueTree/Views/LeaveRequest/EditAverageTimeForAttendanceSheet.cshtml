@model edueTree.Models.TblAverageTimeModel

<link href="~/plugins/select2/select2.css" rel="stylesheet" />

<script src="~/plugins/select2/select2.js"></script>

<section class="content">
    <div class="row">
        <div class="col-md-10">
            @using (Html.BeginForm("EditAverageTimeForAttendanceSheet", "LeaveRequest"))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(d => d.AverageId)
                @Html.HiddenFor(d => d.firmid)

                <div class="box box-success">
                    <div class="box-header">
                        <h3 class="box-title"> Employee Average Time </h3>
                    </div>
                    <div class="box-body">
                        <div class="col-md-6">
                            <label>Select Employee </label>
                            @Html.DropDownListFor(model => model.staffid, Model.StaffListTime, " - Select Employee - ", new { id = "", @class = "form-control select2", required = "required" })
                            @Html.ValidationMessageFor(model => model.staffid, string.Empty, new { @class = "help-block" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label>Working hour per day </label>
                                @Html.TextBoxFor(model => model.hourtime, new { @class = "form-control", @required = "required", placeholder = "hh:mm:ss" })
                                @Html.ValidationMessageFor(model => model.hourtime, string.Empty, new { @class = "help-block" })
                                
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <input type="submit" value="Update" class="btn btn-default pull-right"/>
                        <a href='@Url.Action("UpdateSetting", "LeaveRequest")' class="btn btn-default pull-left">Back to list</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<script type="text/javascript">
    $(".select2").select2();
    $.noConflict();
</script>