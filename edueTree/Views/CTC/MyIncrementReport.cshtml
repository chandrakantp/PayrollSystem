@model IEnumerable<edueTree.Models.StaffCTC>
@{
    Layout = null;
}

<div class="box box-success">
    <div class="box-header">
        <i class="fa fa-money"></i>
        <h3 class="box-title">Increment Report</h3>
    </div>

    <div class="box-body chat" id="chat-box">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("CTC")
                        </th>
                        <th>
                            @Html.DisplayName("Increment Date")
                        </th>
                        <th>
                            @Html.DisplayName("Status")
                        </th>
                        <th>
                            @Html.DisplayName("Narration")
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ctc)
                            </td>
                            <td>
                                @Convert.ToDateTime(item.incrementDate).ToString("dd MMM yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.status)
                            </td>
                            @if (!String.IsNullOrEmpty(item.narration))
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.narration)
                                </td>
                            }
                            else
                            { 
                                <td>
                                    @Html.DisplayName("N/A")
                                </td>                               
                            }

                        </tr>                    
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

