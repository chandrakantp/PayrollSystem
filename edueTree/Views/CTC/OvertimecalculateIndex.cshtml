@model IEnumerable<edueTree.Models.OvetimeCalculateModel>
@{
    Layout = null;
}

<div class="box box-success">
    <div class="box-header">
        <i class="fa fa-calendar"></i>
        <h3 class="box-title">Calculate Overtime</h3>
    </div>
    <div class="box-body">
        <div class="table-responsive">
            <table class="table table-fixed">
                <thead>
                    <tr>
                        <th>Employee Name</th>
                        <th>Per Hour Amount</th>
                        <th>Overtime Pay</th>
                        <th>Under-time Deduct</th>
                        <th>Calculate Month</th>
                        <th></th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployeeName)
                            </td>

                            <td>@Html.DisplayFor(modelItem => item.PerHour)</td>

                            <td>
                                @(item.Overtime == true ? Html.DisplayName("True") : Html.DisplayName("False"))
                            </td>
                            <td>
                                @(item.Undertime == true ? Html.DisplayName("True") : Html.DisplayName("False"))
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.calculationtype)</td>
                            <td>
                                <a href="@Url.Action("EditOvertimeCalculate", "CTC", new { id = item.OvertimeCalId })"> <i class="fa fa-pencil-square"></i></a>
                            </td>
                            <td>
                                <a data-toggle="modal" data-target="#myModalCalOvertimeDelete" href='@Url.Action("DeleteOvertimeCalculate", new { id = item.OvertimeCalId })'><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="myModalCalOvertimeDelete" role="dialog"></div>


<script>
    $(function () {
        $(document).ready(function () {
            $(".select2").select2();
            $('.table').DataTable({
                "ordering": false,
                dom: 'Bfrtip',              
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]

            });
        });

    });

</script>